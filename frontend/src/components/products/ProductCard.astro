---
import { formatCurrency } from '../../lib/utils';

interface Props {
  product: any;
  showPrice?: boolean;
}

const { product, showPrice = false } = Astro.props;
---
<div class="border rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
  <img src={product.imagen?.url} alt={product.nombre} class="w-full h-48 object-cover rounded-md mb-4" />
  <h3 class="text-lg font-semibold mb-2">{product.nombre}</h3>
  <p class="text-gray-600 text-sm mb-4 line-clamp-2">{product.descripcion}</p>
  
  {showPrice ? (
    <div class="flex justify-between items-center">
      <span class="text-xl font-bold text-blue-600">{formatCurrency(product.precio_estandar)}</span>
      <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Agregar
      </button>
    </div>
  ) : (
    <div class="text-center p-2 bg-gray-100 rounded text-gray-600 text-sm">
      Inicia sesi√≥n para ver precios
    </div>
  )}
</div>
