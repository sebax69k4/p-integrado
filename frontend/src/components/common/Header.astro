---
const user = Astro.locals.user;
---
<header class="bg-white shadow sticky top-0 z-40">
  <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-xl font-bold text-blue-600">EcoFort</a>
    
    <div class="flex items-center gap-4">
      {user ? (
        <>
          {user.validado_por_admin && (
            <button 
              id="cart-toggle-btn"
              class="relative p-2 text-gray-600 hover:text-blue-600"
              aria-label="Abrir carrito"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span id="cart-count" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
            </button>
          )}
          
          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-600 hidden sm:inline">
              Hola, <span class="font-medium">{user.username}</span>
            </span>
            {!user.validado_por_admin && (
              <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Pendiente</span>
            )}
            <a href="/dashboard" class="text-gray-600 hover:text-blue-600 text-sm font-medium">
              Mi Cuenta
            </a>
            {(user.role?.type === 'admin' || user.role?.name === 'Admin') && (
              <a href="/admin" class="text-red-600 hover:text-red-800 text-sm font-medium">
                Admin
              </a>
            )}
          </div>
        </>
      ) : (
        <>
          <a href="/login" class="text-gray-600 hover:text-blue-600 font-medium">Iniciar SesiÃ³n</a>
          <a href="/registro" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
            Registrarse
          </a>
        </>
      )}
    </div>
  </nav>
</header>

<script>
  import { cartItems, isCartOpen, type CartItem } from '../../stores/cartStore';

  const cartToggleBtn = document.getElementById('cart-toggle-btn');
  const cartCountEl = document.getElementById('cart-count');

  function updateCartCount() {
    const items = cartItems.get() as CartItem[];
    const count = items.reduce((acc: number, item: CartItem) => acc + item.cantidad, 0);
    
    if (cartCountEl) {
      cartCountEl.textContent = String(count);
      if (count > 0) {
        cartCountEl.classList.remove('hidden');
      } else {
        cartCountEl.classList.add('hidden');
      }
    }
  }

  // Initialize
  updateCartCount();
  
  // Subscribe to changes
  cartItems.subscribe(() => updateCartCount());
  
  // Toggle cart flyout
  cartToggleBtn?.addEventListener('click', () => {
    isCartOpen.set(!isCartOpen.get());
  });
</script>
