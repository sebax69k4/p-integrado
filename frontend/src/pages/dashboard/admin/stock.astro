---
import MainLayout from '../../../layouts/MainLayout.astro';

// Obtener fecha de hoy en formato YYYY-MM-DD
const today = new Date().toISOString().split('T')[0];
---

<MainLayout title="Stock / Laudus | Admin">
  <h1 class="text-2xl font-bold mb-8">Panel de Administraci√≥n</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <aside class="space-y-2">
      <a href="/dashboard/admin/validaciones" class="block p-3 hover:bg-gray-50 rounded text-gray-700">
        Validar Usuarios
      </a>
      <a href="/dashboard/admin/pedidos" class="block p-3 hover:bg-gray-50 rounded text-gray-700">
        Gestionar Pedidos
      </a>
      <a href="/dashboard/admin/stock" class="block p-3 bg-blue-50 text-blue-700 rounded font-medium">
        Stock / Laudus
      </a>
      <hr class="my-4" />
      <a href="/dashboard" class="block p-3 hover:bg-gray-50 rounded text-gray-500 text-sm">
        ‚Üê Volver al Dashboard
      </a>
    </aside>
    
    <div class="md:col-span-3 space-y-6">
      <!-- Importar Stock -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-4">üì§ Importar Stock desde CSV</h2>
        <p class="text-gray-600 mb-4">
          Sube un archivo CSV para actualizar el stock de productos masivamente.
          El archivo debe contener las columnas: <code class="bg-gray-100 px-1 rounded">sku</code> y <code class="bg-gray-100 px-1 rounded">stock</code>
        </p>
        
        <form id="importForm" class="space-y-4">
          <div>
            <label class="block text-sm font-medium mb-2">Archivo CSV</label>
            <input 
              type="file" 
              name="csvFile" 
              accept=".csv"
              required
              class="block w-full text-sm text-gray-500
                file:mr-4 file:py-2 file:px-4
                file:rounded file:border-0
                file:text-sm file:font-semibold
                file:bg-blue-50 file:text-blue-700
                hover:file:bg-blue-100"
            />
          </div>
          <button 
            type="submit" 
            class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors"
          >
            Importar Stock
          </button>
        </form>
        
        <div id="importResult" class="mt-4 hidden">
          <div class="p-4 rounded-lg">
            <p id="importMessage"></p>
            <ul id="importErrors" class="mt-2 text-sm list-disc list-inside"></ul>
          </div>
        </div>
      </div>
      
      <!-- Exportar Pedidos -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-4">üì• Exportar Pedidos para Laudus</h2>
        <p class="text-gray-600 mb-4">
          Descarga archivos CSV con los pedidos para importar en Laudus.
        </p>
        
        <div class="space-y-4">
          <!-- Exportar por estado -->
          <div>
            <h3 class="font-medium text-gray-700 mb-2">Por Estado</h3>
            <div class="flex flex-wrap gap-3">
              <a 
                href="/api/admin/exportar-pedidos?estado=Recibido"
                class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition-colors text-sm"
              >
                üìã Recibidos
              </a>
              <a 
                href="/api/admin/exportar-pedidos?estado=En preparacion"
                class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors text-sm"
              >
                üì¶ En Preparaci√≥n
              </a>
              <a 
                href="/api/admin/exportar-pedidos?estado=Facturado"
                class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors text-sm"
              >
                üßæ Facturados
              </a>
              <a 
                href="/api/admin/exportar-pedidos?estado=Despachado"
                class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors text-sm"
              >
                üöö Despachados
              </a>
            </div>
          </div>
          
          <!-- Exportar con detalle -->
          <div>
            <h3 class="font-medium text-gray-700 mb-2">Con Detalle de Productos</h3>
            <div class="flex flex-wrap gap-3">
              <a 
                href="/api/admin/exportar-pedidos?detalle=true"
                class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors text-sm"
              >
                üìÑ Todos (con items)
              </a>
              <a 
                href="/api/admin/exportar-pedidos?estado=Facturado&detalle=true"
                class="px-4 py-2 bg-purple-700 text-white rounded hover:bg-purple-800 transition-colors text-sm"
              >
                üßæ Facturados (con items)
              </a>
            </div>
          </div>
          
          <!-- Exportar todos -->
          <div>
            <h3 class="font-medium text-gray-700 mb-2">Exportar Todo</h3>
            <a 
              href="/api/admin/exportar-pedidos"
              class="inline-block px-6 py-2 bg-gray-700 text-white rounded hover:bg-gray-800 transition-colors"
            >
              üìä Exportar Todos los Pedidos
            </a>
          </div>
        </div>
      </div>
      
      <!-- Formato de archivos -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-4">üìä Formato de Archivos</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-medium mb-2">CSV de Importaci√≥n (Stock)</h3>
            <pre class="bg-gray-100 p-3 rounded text-sm overflow-x-auto">sku,stock
PRD-001,150
PRD-002,75
PRD-003,200</pre>
          </div>
          <div>
            <h3 class="font-medium mb-2">CSV de Exportaci√≥n (Resumen)</h3>
            <pre class="bg-gray-100 p-3 rounded text-sm overflow-x-auto">ticket,cliente,rut,email,direccion,total,estado,fecha
TKT-001,Empresa SA,12345678-9,email@...,Direccion,50000,Facturado,2024-01-15</pre>
          </div>
          <div class="md:col-span-2">
            <h3 class="font-medium mb-2">CSV de Exportaci√≥n (Detalle de Items)</h3>
            <pre class="bg-gray-100 p-3 rounded text-sm overflow-x-auto">ticket,sku,producto,cantidad,precio_unitario,subtotal
TKT-001,PRD-001,Producto A,5,10000,50000
TKT-001,PRD-002,Producto B,3,8000,24000</pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  const importForm = document.getElementById('importForm') as HTMLFormElement;
  const importResult = document.getElementById('importResult');
  const importMessage = document.getElementById('importMessage');
  const importErrors = document.getElementById('importErrors');
  
  importForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(importForm);
    const submitBtn = importForm.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    submitBtn.disabled = true;
    submitBtn.textContent = 'Importando...';
    
    try {
      const response = await fetch('/api/admin/importar-stock', {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      if (importResult && importMessage) {
        importResult.classList.remove('hidden');
        
        if (response.ok) {
          importResult.querySelector('div')?.classList.remove('bg-red-100', 'text-red-800');
          importResult.querySelector('div')?.classList.add('bg-green-100', 'text-green-800');
          importMessage.textContent = `‚úì Importaci√≥n completada. Productos actualizados: ${result.updated || 0}`;
          
          // Mostrar errores si los hay
          if (importErrors && result.errors && result.errors.length > 0) {
            importErrors.innerHTML = result.errors.map((err: string) => `<li>${err}</li>`).join('');
          } else if (importErrors) {
            importErrors.innerHTML = '';
          }
        } else {
          importResult.querySelector('div')?.classList.remove('bg-green-100', 'text-green-800');
          importResult.querySelector('div')?.classList.add('bg-red-100', 'text-red-800');
          importMessage.textContent = `‚úó Error: ${result.error || 'Error desconocido'}`;
          if (importErrors) importErrors.innerHTML = '';
        }
      }
    } catch (error) {
      console.error(error);
      if (importResult && importMessage) {
        importResult.classList.remove('hidden');
        importResult.querySelector('div')?.classList.add('bg-red-100', 'text-red-800');
        importMessage.textContent = '‚úó Error de conexi√≥n';
      }
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Importar Stock';
    }
  });
</script>
