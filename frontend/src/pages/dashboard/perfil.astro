---
import MainLayout from '../../layouts/MainLayout.astro';

const user = Astro.locals.user;
---

<MainLayout title="Mi Perfil | EcoFort">
  <h1 class="text-2xl font-bold mb-8">Mi Cuenta</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <aside class="space-y-2">
      <a href="/dashboard" class="block p-3 hover:bg-gray-50 rounded text-gray-700">
        Mis Pedidos
      </a>
      <a href="/dashboard/perfil" class="block p-3 bg-blue-50 text-blue-700 rounded font-medium">
        Mi Perfil
      </a>
      <form action="/api/auth/logout" method="POST">
        <button type="submit" class="w-full text-left p-3 hover:bg-red-50 rounded text-red-600">
          Cerrar Sesión
        </button>
      </form>
    </aside>
    
    <div class="md:col-span-3">
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-6">Mi Perfil</h2>
        
        <div class="mb-6">
          <div class="flex items-center gap-3">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-2xl font-bold text-blue-600">
                {user?.username?.charAt(0).toUpperCase() || 'U'}
              </span>
            </div>
            <div>
              <h3 class="text-lg font-semibold">{user?.username}</h3>
              <p class="text-gray-500">{user?.email}</p>
              {user?.validado_por_admin ? (
                <span class="inline-flex items-center gap-1 text-sm text-green-600">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Cuenta verificada
                </span>
              ) : (
                <span class="inline-flex items-center gap-1 text-sm text-yellow-600">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  Pendiente de validación
                </span>
              )}
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 border-b pb-2">Datos Personales</h4>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Nombre de Usuario</label>
              <p class="text-gray-900">{user?.username || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Email</label>
              <p class="text-gray-900">{user?.email || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Teléfono</label>
              <p class="text-gray-900">{user?.telefono || '-'}</p>
            </div>
          </div>
          
          <div class="space-y-4">
            <h4 class="font-semibold text-gray-900 border-b pb-2">Datos de Facturación</h4>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">RUT</label>
              <p class="text-gray-900">{user?.rut || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Razón Social</label>
              <p class="text-gray-900">{user?.razon_social || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Giro</label>
              <p class="text-gray-900">{user?.giro || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Tipo de Persona</label>
              <p class="text-gray-900">{user?.tipo_persona || '-'}</p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Dirección</label>
              <p class="text-gray-900">{user?.direccion || '-'}</p>
            </div>
          </div>
        </div>

        {!user?.validado_por_admin && (
          <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <h4 class="font-semibold text-yellow-800 mb-2">Tu cuenta está pendiente de validación</h4>
            <p class="text-sm text-yellow-700">
              Un administrador revisará tus datos y aprobará tu cuenta. Una vez validada, 
              podrás ver los precios y realizar pedidos en nuestra plataforma.
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</MainLayout>
