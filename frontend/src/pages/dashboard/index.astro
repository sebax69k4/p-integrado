---
import MainLayout from '../../layouts/MainLayout.astro';
import { getPedidosUsuario } from '../../lib/strapi';
import { formatCurrency } from '../../lib/utils';

const user = Astro.locals.user;
const token = Astro.cookies.get('jwt')?.value;

let pedidos: any[] = [];
if (token) {
  try {
    pedidos = await getPedidosUsuario(token);
  } catch (error) {
    console.error('Error fetching orders:', error);
  }
}

const getEstadoColor = (estado: string) => {
  switch (estado) {
    case 'Recibido': return 'bg-yellow-100 text-yellow-800';
    case 'Despachado': return 'bg-green-100 text-green-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};
---

<MainLayout title="Mi Cuenta | EcoFort">
  <h1 class="text-2xl font-bold mb-8">Mi Cuenta</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <aside class="space-y-2">
      <a href="/dashboard" class="block p-3 bg-blue-50 text-blue-700 rounded font-medium">
        Mis Pedidos
      </a>
      <a href="/dashboard/perfil" class="block p-3 hover:bg-gray-50 rounded text-gray-700">
        Mi Perfil
      </a>
      <form action="/api/auth/logout" method="POST">
        <button type="submit" class="w-full text-left p-3 hover:bg-red-50 rounded text-red-600">
          Cerrar Sesión
        </button>
      </form>
    </aside>
    
    <div class="md:col-span-3">
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-6">Historial de Pedidos</h2>
        
        {pedidos.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-gray-500 mb-4">No tienes pedidos todavía.</p>
            <a href="/" class="text-blue-600 hover:underline">Ir al catálogo</a>
          </div>
        ) : (
          <div class="space-y-4">
            {pedidos.map((pedido: any) => (
              <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex flex-wrap justify-between items-start gap-4 mb-4">
                  <div>
                    <p class="font-mono font-bold text-lg">{pedido.numero_ticket}</p>
                    <p class="text-sm text-gray-500">
                      {new Date(pedido.fecha_pedido || pedido.createdAt).toLocaleDateString('es-CL', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      })}
                    </p>
                  </div>
                  <div class="text-right">
                    <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${getEstadoColor(pedido.estado)}`}>
                      {pedido.estado}
                    </span>
                    <p class="text-lg font-bold text-blue-600 mt-1">{formatCurrency(pedido.total)}</p>
                  </div>
                </div>
                
                <div class="border-t pt-4">
                  <p class="text-sm text-gray-600 mb-2">
                    <span class="font-medium">Envío:</span> {pedido.direccion_envio}
                  </p>
                  {pedido.items && Array.isArray(pedido.items) && (
                    <div class="mt-2">
                      <p class="text-sm font-medium text-gray-700 mb-2">Productos:</p>
                      <ul class="text-sm text-gray-600 space-y-1">
                        {pedido.items.map((item: any) => (
                          <li class="flex justify-between">
                            <span>{item.nombre} x{item.cantidad}</span>
                            <span>{formatCurrency(item.subtotal)}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</MainLayout>
