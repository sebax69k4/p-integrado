---
import MainLayout from '../../layouts/MainLayout.astro';
import { getUsuariosPendientes } from '../../lib/strapi';

const user = Astro.locals.user;

if (!user || user.role?.type !== 'admin') {
  return Astro.redirect('/');
}

// Fetch data for KPIs
let pendingUsersCount = 0;
try {
  const pendingUsers = await getUsuariosPendientes();
  pendingUsersCount = pendingUsers.length;
} catch (error) {
  console.error('Error fetching pending users:', error);
}

const strapiUrl = import.meta.env.STRAPI_URL;
const strapiAdminUrl = `${strapiUrl}/admin`;
---

<MainLayout title="Panel de Administración | EcoFort">
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Panel de Administración</h1>
      <span class="text-gray-500">Bienvenido, {user.username}</span>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
      <!-- Usuarios Pendientes -->
      <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-yellow-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 uppercase font-semibold">Usuarios Pendientes</p>
            <p class="text-3xl font-bold text-gray-900 mt-1">{pendingUsersCount}</p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-full text-yellow-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="/admin/validar-usuarios" class="text-sm text-blue-600 hover:underline font-medium">Revisar solicitudes &rarr;</a>
        </div>
      </div>

      <!-- Productos (Placeholder KPI) -->
      <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 uppercase font-semibold">Gestión de Productos</p>
            <p class="text-sm text-gray-600 mt-1">Administrar catálogo</p>
          </div>
          <div class="p-3 bg-blue-100 rounded-full text-blue-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href={strapiAdminUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline font-medium">Ir al CMS &rarr;</a>
        </div>
      </div>

      <!-- Pedidos (Placeholder) -->
      <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 uppercase font-semibold">Pedidos</p>
            <p class="text-sm text-gray-600 mt-1">Ver historial</p>
          </div>
          <div class="p-3 bg-green-100 rounded-full text-green-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <span class="text-sm text-gray-400 cursor-not-allowed">Próximamente</span>
        </div>
      </div>
    </div>

    <!-- Quick Actions / Menu -->
    <h2 class="text-xl font-bold text-gray-900 mb-4">Acciones Rápidas</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <a href="/admin/validar-usuarios" class="flex items-center p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow border border-gray-100 group">
        <div class="p-3 bg-indigo-100 rounded-lg text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="font-semibold text-gray-900">Validar Usuarios</h3>
          <p class="text-sm text-gray-500">Aprobar o rechazar registros</p>
        </div>
      </a>
      
      <a href={strapiAdminUrl} target="_blank" rel="noopener noreferrer" class="flex items-center p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow border border-gray-100 group">
        <div class="p-3 bg-purple-100 rounded-lg text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="font-semibold text-gray-900">Configuración CMS</h3>
          <p class="text-sm text-gray-500">Ir al panel de Strapi</p>
        </div>
      </a>
    </div>
  </div>
</MainLayout>
