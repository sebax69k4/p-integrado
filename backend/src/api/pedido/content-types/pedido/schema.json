{
  "kind": "collectionType",
  "collectionName": "pedidos",
  "info": {
    "singularName": "pedido",
    "pluralName": "pedidos",
    "displayName": "Pedido",
    "description": "Pedidos de clientes"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "numero_ticket": {
      "type": "uid",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "estado": {
      "type": "enumeration",
      "enum": ["Recibido", "En preparacion", "Facturado", "Despachado"],
      "default": "Recibido",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "pedidos"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "direccion_envio": {
      "type": "string",
      "required": true
    },
    "fecha_pedido": {
      "type": "datetime"
    },
    "historial_estados": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::estado-pedido.estado-pedido",
      "mappedBy": "pedido"
    }
  }
}
